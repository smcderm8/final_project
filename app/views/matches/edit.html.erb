<!-- Validation failure messages -->
<% if @match.errors.any? %>
  <% @match.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Match #<%= @match.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_match/<%= @match.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for number -->
      <div class="form-group">
        <label for="number" class="control-label">
          Number
        </label>

        <input type="text" id="number" name="number" placeholder="Number" class="form-control" value="<%= @match.number %>">
      </div>

      <!-- Label and input for course_id -->
      <div class="form-group">
        <label for="course_id" class="control-label">
          Course
        </label>

        <%= select_tag(:course_id, options_from_collection_for_select(Course.all, :id, :name, @match.course_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Match
      </button>
      or
      <a href="/matches/<%= @match.id %>">Cancel</a>
    </form>
  </div>
</div>
